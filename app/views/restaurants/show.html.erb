<div class="container my-5"></div>
  <div class="row mx-5">
    <div class="d-flex justify-content-between">
      <h1><%= @restaurant.name %></h1>
      <%= link_to restaurants_path do %>
        <button type="button" class="btn btn-primary">Back to list</button>
      <% end %>
    </div>

    <div class="card-body alert alert-info">
      <p><i class="fa-solid fa-utensils"></i> <%= @restaurant.category.capitalize %></p>
      <p><i class="fa-solid fa-location-dot"></i> <%= @restaurant.address %></p>
      <p><i class="fa-solid fa-phone"></i> <%= @restaurant.phone_number %></p>
    </div>

    <div class="mt-5 mb-3">
      <div class="d-flex justify-content-between">
      <h3>Reviews</h3>
      <%= link_to  new_restaurant_review_path(@restaurant) do %>
        <button type="button" class="btn btn-secondary">Add a review</button>
      <% end %>
      </div>
    </div>
    <% @restaurant.reviews.each do |review| %>
      <div class="card mb-3">
        <div class="card-body">
          <p><%= review.content %></p>
          <p><i class="fa-regular fa-face-smile"></i> <%= review.rating %>/5</p>
        </div>
      </div>
    <% end %>

    </div>
</div>
