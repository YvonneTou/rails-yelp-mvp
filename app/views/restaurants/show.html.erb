<div class="container my-5"></div>
  <div class="row mx-5">
    <h1><%= @restaurant.name %></h1>
    <div class="card mb-3">
      <div class="card-body">
        <p><i class="fa-solid fa-location-dot"></i> <%= @restaurant.address %></p>
        <p><i class="fa-solid fa-phone"></i> <%= @restaurant.phone_number %></p>
      </div>
    </div>
  </div>

  <div class="row mx-4">
    <%= link_to restaurants_path do %>
      <button type="button" class="btn btn-primary">Back to list</button>
    <% end %>
  </div>
</div>
